
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Login</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link href="~/Content/css/custom.css?v1.0" rel="stylesheet" />
	<script src="~/JsModule/global.js"></script>
	<script src="~/JsModule/Authentication.js"></script>
	<link href="~/Content/css/select2.css" rel="stylesheet" />
	<script src="~/Content/js/select2.js"></script>
	<script type="text/javascript">

		function preventBack() { window.history.forward(); }

		setTimeout("preventBack()", 0);

		window.onunload = function () { null };

	</script>
	<style>
		body {
			overflow: hidden;
		}

		.login {
			box-shadow: 2px 2px 11px #636363;
			margin: 30% 0 0 0;
			background: #ffffffd9;
			padding: 30px 100px;
		}

		.login-heading {
			padding: 0px;
			font-family: sans-serif;
			font-weight: bold;
			color: #2347ad;
			text-align: center;
			margin: 0px 0px 11px 0px;
		}

		.btn-flat {
			background: #1065b5;
			border: none;
			border-radius: 1px;
		}

		.input {
			pointer-events: none;
			opacity: 0.5;
		}
	</style>
</head>
<body>
	<div class="row">
		<input type="text" id="hidgetotp" style="display:none" />
		<div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
			<div class="row login">
				<h3 class="text-danger text-center" style="margin-top:-12px;line-height:35px">
					<img src="~/Content/img/logo.png" style="width: 200px;" />
					<hr />
					<span class="login-heading"><span class="UserType">Login</span>-Panel</span>
				</h3>
				<div class="col-md-12 form-group">
					<select id="ddlUserType" class="form-control">
						<option>Select User Type</option>
						<option>NHM</option>
						<option>Chandan</option>
					</select>
				</div>
				<div class="input info">
					<div class="col-md-12 form-group">
						<input type="text" id="txtUserId" class="form-control" autocomplete="off" placeholder="Username" />
					</div>
					<div class="col-md-12 form-group">
						<input type="password" id="txtPassword" class="form-control" autocomplete="off" placeholder="Password" />
					</div>
					<div class="col-md-12 form-group text-center" id="Login">
						<button id="btnLogin" onclick="authenticate()" class="btn btn-success btn-flat"><i class="fa fa-sign-in">&nbsp;</i>Submit</button>
						<div class="flex" id="OTP">
							<input type="text" id="txtOTP" class="form-control" style="border-radius: 0;border-color: #2394ad;height: auto;" placeholder="Enter OTP" />
							<button id="btnVerify" style="padding: 0px 5px;background: #2394ad;width: 40%;" class="btn btn-success btn-flat"><i class="fa fa-sign-in">&nbsp;</i>Verify</button>
						</div>
					</div>
				</div>				
				<div class="col-md-12 form-group text-center">
					<hr />
					<a href="#" data-toggle="modal" data-target="#modalForgetPassword"><i class="fa fa-key">&nbsp;</i>Forget Password?</a>
				</div>			
			</div>
		</div>
	</div>
	<div id="modalForgetPassword" class="modal fade" role="dialog">
		<div class="modal-dialog modal-sm">

			<!-- Modal content-->
			<div class="modal-content" style="margin-top:35%;">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title" style="display: flex;"><i class="fa fa-key">&nbsp;</i>Forget Password</h4>
				</div>
				<div class="modal-body" style="padding: 12px 30px;">
					<div class="row">
						<div class="col-md-12">
							<input type="text" class="form-control" id="txtForgetMobileNo" data-int maxlength="10" placeholder="Enter Registered Mobile No" />
						</div>
						<div class="col-md-12 text-center form-group">
							<br />
							<button class="btn btn-success" onclick="OTPTesting()">Send Password</button>
						</div>
					</div>				
				</div>
			</div>
		</div>
	</div>
</body>
</html>