
@{
	ViewBag.Title = "EQASDeduction";
	Layout = "~/Views/Shared/_layout.cshtml";
}

<script src="~/Areas/Invoice/JsModule/EQASDeduction.js"></script>
<style>
	.btn-report {
		text-decoration: none !important;
		border: none;
		padding: 3px 5px;
		background-color: #2492b3;
		border-color: #2492b3;
		color: #fff;
		cursor: pointer;
	}
	.bg-danger {
		background-color: #ffbebe;
	}
</style>
<div class="page-box" style="margin-top:10px;">
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-primary">
				<div class="panel-heading">
					EQAS Deduction
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-md-8">
							<div class="row">
								<div class="col-md-2 form-group">
									<label>Region</label>
									<select id="ddlRegion" class="form-control">
										<option>Garhwal</option>
										<option>Kumaon</option>
									</select>
								</div>
								<div class="col-md-5 form-group">
									<label>Invoice Month</label>
									<div class="flex">
										<input type="month" id="txtFrom" class="form-control" />
										<button class="btn-flat btn-success" id="btnSave" style="background:#45bb13;padding: 4px 20px;" onclick="InvoiceList('InvoiceListOfTheMonthForDeduction')">Submit</button>
									</div>
								</div>
								<div class="col-md-5 form-group">
									<label>Centre Name</label>
									<div class="flex">
										<select id="ddlCentreName" class="form-control"></select>
										<button class="btn-flat btn-success" id="btnSave" style="background:#45bb13;padding: 4px 20px;" onclick="InvoiceList('InvoiceListOfCentreForDeduction')">Submit</button>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 form-group">
							<div class="scroll" style="min-height:420px">
								<table class="table table-bordered" id="tblInvoiceSummary">
									<thead>
										<tr>
											<th style="width:0%;">Invoice Month</th>
											<th style="width: 23%;white-space:nowrap;">Invoice No</th>
											<th style="width: 40%;">Centre Name</th>
											<th style="width: 10%;text-align:right;">Invoice Amount</th>
											<th style="width: 12%;text-align:right;">Ded. TC</th>
											<th style="width: 15%;text-align:right;">Deduct</th>
										</tr>
									</thead>
									<tbody></tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="modalAbnormal" class="modal fade" role="dialog">
	<div class="modal-dialog modal-lg" style="width: 1245px;">
		<!-- Modal content-->
		<div class="modal-content" style="margin-top:0%;">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<div class="btnPresc"></div>
			</div>
			<div class="panel-body">
				<div class="col-md-12 form-group">
					<div class="scroll" style="min-height:500px">
						<table class="table table-bordered" id="tblEQASAbnormalReport">
							<thead>
								<tr>
									<th style="width:30%">Observation Name</th>
									<th style="width:10%;text-align:center" colspan="3">Chandan</th>
									<th style="width:10%;text-align:center" colspan="6">EQAS</th>
								</tr>
								<tr>
									<th style="width:30%">Observation Name</th>
									<th style="width:6%">Reading</th>
									<th style="width: 7%;">Unit</th>
									<th style="width: 10%;">Ref-Range</th>
									<th style="width: 15%;">Lab Name</th>
									<th style="width: 5%;">Reading</th>
									<th style="width: 7%;">Unit</th>
									<th style="width: 10%;">Ref. Range</th>
									<th style="width: 10%;">Status</th>								
								</tr>
							</thead>
							<tbody></tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
