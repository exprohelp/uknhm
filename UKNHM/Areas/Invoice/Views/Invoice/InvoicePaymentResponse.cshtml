
@{
	ViewBag.Title = "InvoicePaymentResponse";
	Layout = "~/Views/Shared1/_layout.cshtml";
}
<style>
	.table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
		padding: 8px;
		line-height: 1.42857143;
		vertical-align: top;
		 border-top: none;
	}
	#title {
		display:none;
		color: #3c963c;
	}
	#tblBillDetails{
		display:none;
	}
	body {
		background: #808080 !important;
	}
	.payment {
		border-top: 4px solid #3c963c;
		margin-top: 10%;
		border-radius: 4px;
		/* border: 1px solid #dedede; */
		font-size: 22px;
		background: #fff;
		padding: 10px;
	}
	.fa-check-circle {		
		font-size: 32px;		
	}
		.payment table td, .payment table th{
			font-size: 14px !important;		
		}
		.row{
			background:#ddd;
		}
	#layout-section {
		background: #dddddd;
		padding: 0px 10px;
		border-top: 2px solid #ec1100;
		margin: 3px 5px 0px 5px;
		height: 570px;
	}
</style>
<script src="~/Areas/Invoice/JsModule/InvoicePaymentResponse.js"></script>
<div class="page-box" style="margin-top:10px;">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 form-group">
			<input type="file" id="FileUpload" style="display:none;" />
			<div class="payment">				
				<p id="btnProcess" class="text-center" style="display:block;font-size: 19px;">				
					<button id="btnProcess" class="btn btn-warning"><img src='/content/img/waiting.gif' style='width:15px' />&nbsp;Payment Processing...</button>
				</p>
				<h3 id="title" class="text-center"><i class="fa fa-check-circle"></i><br />Payment Successful<hr style="border-top: 1px solid #efeeee;margin-top: 10px;" /></h3>
				<table class="table" id="tblBillDetails">
					<tr>
						<th>Payment Status</th>
						<th>:</th>
						<td class="text-right" id="txtPayStatus">@ViewBag.Status</td>
					</tr>
					<tr>
						<th>Payment Type</th>
						<th>:</th>
						<td class="text-right">Online</td>
					</tr>
					<tr>
						<th>Reference No</th>
						<th>:</th>
						<td class="text-right" id="txtReceiptNo">@ViewBag.ReferenceNo</td>
					</tr>
					<tr>
						<th>Transaction Id</th>
						<th>:</th>
						<td class="text-right">@ViewBag.TransactionId</td>
					</tr>
					<tr>
						<th>Payment Date</th>
						<th>:</th>
						<td class="text-right" id="txtPayDate">@ViewBag.DateTime</td>
					</tr>
					<tr>
						<th>Amount Paid</th>
						<th>:</th>
						<th class="text-right" id="txtAmount">@ViewBag.Amount</th>
					</tr>
				</table>
			</div>
		</div>
	</div>
</div>

